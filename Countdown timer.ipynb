      "source": [
        "import time\n",
        "my_time = int(input(\"Enter the time in seconds: \" ))\n",
        "for i in (range(my_time,0,-1)):\n",
        "  seconds = i % 60\n",
        "  minutes = int(i / 60) % 60\n",
        "  hours = int(i / 3600)\n",
        "  print(f\"{hours:02}:{minutes:02}:{seconds:02}\")\n",
        "\n",
        "  time.sleep(1)\n",
        "\n",
        "print(\"Wake up\")"
      ]
    }
  ]
}